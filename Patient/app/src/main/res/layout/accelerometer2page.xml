<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bluereel"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/countTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="25dp"
        android:text="Count"
        android:textSize="60sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/buttonBackToMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:src="@drawable/gotomain1" />

    <ImageButton
        android:id="@+id/ResetBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/reset190" />

    <TextView
        android:id="@+id/textZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonBackToMain"
        android:layout_marginBottom="103dp"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/ResetBT"
        android:text="Z"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textZ"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/ResetBT"
        android:text="X"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textX"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/ResetBT"
        android:text="Y"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/countExTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textY"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:text="0"
        android:textSize="60sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/noiseET2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Default Value = 16.65"
        android:layout_above="@+id/noiseBT"
        android:layout_alignStart="@+id/countTV">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/noiseBT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Difficulty Value"
        android:textStyle="bold"
        android:layout_below="@+id/textZ"
        android:layout_alignStart="@+id/noiseET2" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/addtohis"
        android:src="@drawable/add"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>