<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bluereel" >

    <TextView
        android:id="@+id/chooseExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Choose Method Exercise"
        android:textSize="25dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/VerticalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vertical"
        android:layout_below="@+id/chooseExercise"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/HorizontalButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/horizontal"
        android:layout_below="@+id/VerticalButton"
        android:layout_alignStart="@+id/VerticalButton" />

    <ImageButton
        android:id="@+id/buttonBackToMain"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:src="@drawable/gotomain1"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/chooseExercise"
        android:layout_alignEnd="@+id/chooseExercise" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EX"
        android:id="@+id/exBT"
        android:layout_above="@+id/buttonBackToMain"
        android:layout_toEndOf="@+id/HorizontalButton" />

</RelativeLayout>
